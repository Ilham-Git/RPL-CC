<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".user.ReportFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:id="@+id/btnLaporBerita"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/btnCekFakta"
        android:text="Laporan Berita" />

    <Button
        android:id="@+id/btnCekFakta"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/abu_gelap"
        android:text="Cek Fakta"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvFotoLapor"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="50dp"
        android:text="Unggah Foto Berita"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvTeksLapor"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etLinkLapor"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="50dp"
        android:text="Teks Berita"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/etLinkLapor"
        android:layout_width="280dp"
        android:layout_height="59dp"
        android:layout_below="@+id/tvLinkLapor"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="50dp"
        android:ems="10"
        android:hint="Masukkan Link Berita"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tvLinkLapor"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etNamaLapor"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="50dp"
        android:text="Link Berita (Optional)"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tvNamaLapor"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etJudulLapor"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="50dp"
        android:text="Nama Pelapor"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/etNamaLapor"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNamaLapor"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="50dp"
        android:ems="10"
        android:hint="Masukkan Nama"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvFotoLapor"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/tvFotoLapor"
            app:cardCornerRadius="20dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="107dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/ivFotoLapor"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/img_holder" />
        </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvJudulLapor"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cvFotoLapor"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="50dp"
        android:text="Judul Berita"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/etJudulLapor"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_below="@+id/tvJudulLapor"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="50dp"
        android:ems="10"
        android:hint="Masukkan Judul Berita"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etTeksLapor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTeksLapor"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="49dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Copy Teks"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btnKirimLapor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etTeksLapor"
        android:layout_alignParentStart="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="5dp"
        android:text="Lapor" />

    </RelativeLayout>

</ScrollView>