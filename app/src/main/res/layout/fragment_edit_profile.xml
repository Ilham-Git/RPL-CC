<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".user.FragmentEditProfile">

    <!-- TODO: Update blank fragment layout -->
    <View
        android:id="@+id/green_top"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="#04764E" />

    <ImageView
        android:id="@+id/btn_kembali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:tint="@color/white"
        android:src="@drawable/ic_arrow_back" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/green_top"
        android:background="@color/black" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvFotoProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/green_top"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-70dp"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/ivFotoProfile"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/profile_background"
            android:src="@drawable/ic_baseline_person_outline_24" />

    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/etNamaProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cvFotoProfile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="..."
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etNamaProfile"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/textbox_profile"
        android:drawableStart="@drawable/ic_baseline_mail_outline_24"
        android:gravity="center"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etNomorHP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEmail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/textbox_profile"
        android:drawableStart="@drawable/ic_baseline_phone_android_24"
        android:gravity="center"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etLokasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etNomorHP"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/textbox_profile"
        android:drawableStart="@drawable/ic_outline_map_24"
        android:gravity="center"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnUbah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etLokasi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/profile_background"
        android:padding="10dp"
        android:text="Ubah Profile"
        android:textColor="@color/white" />

</RelativeLayout>